{
  "manifest_version": 3,
  "name": "AI file downloader",
  "version": "1.0",
  "description": "Blocks downloads with MIME type application/pdf.",
  "permissions": [
    "downloads","windows","activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ], 
  "action": {
    "default_popup": "popup.html"},

    "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content-script.js"],
            "run_at": "document_start"
        }],  
  "web_accessible_resources": [
        {
            "resources": ["build/pdf.worker.min.js"],
            "matches": ["<all_urls>"]
        }]

}
